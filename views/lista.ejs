<%- include('includes/head.ejs') %>

<h1 class="title">Pide tus higienicos</h1>

<h3 class="title is-3">Shampoo</h3>
<br><br>

<% if (higienicos.length > 0) { %>
    <div class="columns is-multiline">
        <% for (let higienico of higienicos) { %>
            <div class="column is-3">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="<%= higienico.imagen %>" alt="Placeholder image">
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                            <figure class="image is-48x48">
                                <img src="<%= higienico.imagen %>" alt="Placeholder image">
                            </figure>
                            </div>
                            <div class="media-content">
                            <p class="title is-4"><%= higienico.nombre %></p>
                            <p class="subtitle is-6"><%= higienico.handle %> $<%= higienico.precio %> </p>
                            </div>
                        </div>
                    
                        <div class="content">
                            <%= higienico.descripcion %> 
                            <br>
                            Ingredientes:
                            <br>
                            <%= higienico.ingredientes %> 
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
<% } else { %>
    <h1>No puedes pedir higienicos >:( </h1>
<% } %>   

    <br><br>

<%- include('includes/foot.ejs') %>
